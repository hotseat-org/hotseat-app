{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "bun run prisma:generate && remix vite:build",
    "dev": "remix vite:dev",
    "start": "remix-serve ./build/server/index.js",
    "postinstall": "bun run prisma:generate",
    "prisma:generate": "bunx prisma generate --schema=./app/repositories/main-repository/prisma/schema.prisma",
    "prisma:reset": "bunx prisma migrate reset --schema=./app/repositories/main-repository/prisma/schema.prisma",
    "prisma:migrate": "bunx prisma migrate dev --schema=./app/repositories/main-repository/prisma/schema.prisma",
    "prisma:studio": "bunx prisma studio --schema=./app/repositories/main-repository/prisma/schema.prisma",
    "prisma:format": "bunx prisma format --schema=./app/repositories/main-repository/prisma/schema.prisma",
    "prisma:validate": "bunx prisma validate --schema=./app/repositories/main-repository/prisma/schema.prisma",
    "db:start": "docker compose up -d postgres",
    "db:stop": "docker compose stop postgres",
    "typecheck": "tsc --project ./tsconfig.json"
  },
  "dependencies": {
    "@nextui-org/react": "^2.4.1",
    "@prisma/client": "^5.14.0",
    "@remix-run/node": "^2.9.2",
    "@remix-run/react": "^2.9.2",
    "@remix-run/serve": "^2.9.2",
    "@remix-run/server-runtime": "^2.9.2",
    "@smplrspace/smplr-loader": "^2.19.0",
    "@types/pluralize": "^0.0.33",
    "@uidotdev/usehooks": "^2.4.1",
    "@vercel/og": "^0.6.2",
    "@vercel/remix": "^2.9.2-patch.2",
    "chalk": "^5.3.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "framer-motion": "^11.2.10",
    "isbot": "^4",
    "lucide-react": "^0.383.0",
    "nanoid": "^5.0.7",
    "pluralize": "^8.0.0",
    "prisma": "^5.14.0",
    "ramda": "^0.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remix": "^2.9.2",
    "remix-auth": "^3.7.0",
    "remix-auth-github": "^1.7.0",
    "remix-auth-google": "^2.0.0",
    "remix-themes": "^1.3.1",
    "remix-utils": "^7.6.0",
    "slugify": "^1.6.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.9.2",
    "@remix-run/eslint-config": "^2.9.2",
    "@types/ramda": "^0.30.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "esbuild": "^0.21.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.12",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=18"
  }
}
