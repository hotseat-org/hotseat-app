{
  "name": "remix-app-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "bun run prisma:generate && remix vite:build",
    "dev": "remix vite:dev",
    "start": "remix-serve ./build/server/index.js",
    "postinstall": "bun run prisma:generate",
    "prisma:generate": "bunx prisma generate --schema=./app/repositories/main-repository/prisma/schema.prisma",
    "prisma:reset": "bunx prisma migrate reset --schema=./app/repositories/main-repository/prisma/schema.prisma",
    "prisma:migrate": "bunx prisma migrate dev --schema=./app/repositories/main-repository/prisma/schema.prisma",
    "prisma:studio": "bunx prisma studio --schema=./app/repositories/main-repository/prisma/schema.prisma",
    "prisma:format": "bunx prisma format --schema=./app/repositories/main-repository/prisma/schema.prisma",
    "prisma:validate": "bunx prisma validate --schema=./app/repositories/main-repository/prisma/schema.prisma",
    "db:start": "docker compose up -d postgres",
    "db:stop": "docker compose stop postgres",
    "typecheck": "tsc --project ./tsconfig.json"
  },
  "dependencies": {
    "@nextui-org/react": "^2.4.8",
    "@prisma/client": "^5.22.0",
    "@remix-run/node": "^2.14.0",
    "@remix-run/react": "^2.14.0",
    "@remix-run/serve": "^2.14.0",
    "@remix-run/server-runtime": "^2.14.0",
    "@smplrspace/smplr-loader": "^2.28.0",
    "@types/pluralize": "^0.0.33",
    "@uidotdev/usehooks": "^2.4.1",
    "@vercel/og": "^0.6.3",
    "@vercel/remix": "^2.14.0",
    "chalk": "^5.3.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "framer-motion": "^11.2.10",
    "isbot": "^4",
    "lucide-react": "^0.383.0",
    "nanoid": "^5.0.7",
    "pluralize": "^8.0.0",
    "prisma": "^5.22.0",
    "ramda": "^0.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remix": "^2.14.0",
    "remix-auth": "^3.7.0",
    "remix-auth-github": "^2.0.0",
    "remix-auth-google": "^2.0.0",
    "remix-themes": "^1.5.1",
    "remix-utils": "^7.7.0",
    "slugify": "^1.6.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.14.0",
    "@remix-run/eslint-config": "^2.14.0",
    "@types/ramda": "^0.30.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.7.0",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.2"
  },
  "engines": {
    "node": ">=20"
  }
}
