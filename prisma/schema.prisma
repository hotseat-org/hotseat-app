// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  PK            Int           @id @default(autoincrement())
  id            String        @unique
  email         String        @unique
  displayName   String?
  reservations  Reservation[]
  seatsResident Seat[]
  photos        Photo[]
}

model Photo {
  url String @id @unique
  user User @relation(fields: [userPK], references: [PK])
  userPK Int
}

model Seat {
  PK              Int           @id @default(autoincrement())
  id              String        @unique @default(uuid()) @db.VarChar(36)
  reservations    Reservation[]
  resident        User?         @relation(fields: [residentPK], references: [PK])
  residentPK      Int?
  room            Room?         @relation(fields: [roomPK], references: [PK])
  roomPK          Int?
  x               Int
  y               Int
}

model Reservation {
  PK     Int      @id @default(autoincrement())
  id     String   @unique @default(uuid()) @db.VarChar(36)
  from   DateTime
  to     DateTime
  by     User     @relation(fields: [byPK], references: [PK])
  byPK   Int
  seat   Seat     @relation(fields: [seatPK], references: [PK])
  seatPK Int
}

model Room {
  PK     Int      @id @default(autoincrement())
  id     String   @unique @default(uuid()) @db.VarChar(36)
  name   String
  seats  Seat[]
}
