// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [pgcrypto]
}

model User {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  email        String         @unique
  profiles      Profile[]

  displayName String
  avatarUrl   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([id])
  @@index([email])
}

enum Role {
  USER
  ADMIN
}

model Profile {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  userId         String @db.Uuid        
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organizationSlug String        
  organization   Organization @relation(fields: [organizationSlug], references: [slug], onDelete: Cascade)

  displayName String
  avatarUrl   String?

  role Role

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  @@unique([userId, organizationSlug])
  @@index([userId, organizationSlug])
}

model Organization {
  slug     String  @id @unique
  name     String
  profiles  Profile[]
  invites  OrganizationInvite[]

  invitationHash String? @unique

  description String?
  thumbnail String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([invitationHash])
  @@index([slug])
}

model OrganizationInvite {
  expiresAt DateTime
  email String

  organizationSlug String
  organization  Organization @relation(fields: [organizationSlug], references: [slug], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, organizationSlug])
  @@index([email, organizationSlug])
}
